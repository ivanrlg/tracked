<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MtbMate.Screens.Settings.SettingsScreen"
    Title="{Binding Title}">
    <ContentPage.Content>
        <TableView
            Intent="Settings">
            <TableSection
                Title="Bluetooth Accelerometer">
                <SwitchCell
                    Text="Detect Jumps"
                    On="{Binding ShouldDetectJumps}"/>
            </TableSection>
        </TableView>
    </ContentPage.Content>
</ContentPage>