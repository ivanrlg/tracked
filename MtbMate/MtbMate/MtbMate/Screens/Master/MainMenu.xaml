<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MtbMate.Screens.Master.MainMenu"
    Title="Menu...">
    <ContentPage.Content>
        <ListView
            x:Name="navMenu"
            HasUnevenRows="True"
            ItemsSource="{Binding MenuItems}"
            ItemTapped="Menu_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell
                        Text="{Binding Title}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>