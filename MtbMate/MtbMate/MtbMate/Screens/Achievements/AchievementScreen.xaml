<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MtbMate.Screens.Achievements.AchievementScreen"
    Title="{Binding Title}">
    <ContentPage.Content>
        <ListView
            ItemsSource="{Binding Rides}"
            ItemTapped="Ride_Tapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell
                        Text="{Binding DisplayName}"
                        Detail="{Binding Start, StringFormat='{0:d MMM yy HH:mm}'}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>