<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MtbMate.Home.MainPage">
    <StackLayout>
        <Label
            FontSize="100"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Text="{Binding Mph, StringFormat='{}{0}mph'}" />
        <Label
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Text="{Binding Jump}" />
        <Button
            Text="Start"
            Clicked="Start_Clicked" />
        <Button
            Text="Stop"
            Clicked="Stop_Clicked" />
        <Button
            Text="Export"
            Clicked="Export_Clicked" />
        <Button
            Text="Bluetooth Setup"
            Clicked="Bluetooth_Clicked" />
    </StackLayout>

</ContentPage>
