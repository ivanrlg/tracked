<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Tracked.Screens.Master.MainMenu"
    Title="Menu...">
    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="navMenu"
                HasUnevenRows="True"
                ItemsSource="{Binding MenuItems}"
                ItemTapped="Menu_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Text="{Binding Title}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                IsVisible="{Binding IsLoggedIn, Converter={StaticResource InvertBoolConverter}}"
                Text="Connect to Google"
                Clicked="ConnectToGoogle_Clicked"
                BackgroundColor="{StaticResource GoogleButtonColour}"
                TextColor="White" />
            <Label
                Margin="15"
                HorizontalTextAlignment="Center"
                Text="{Binding LoggedInText}"
                IsVisible="{Binding IsLoggedIn}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>